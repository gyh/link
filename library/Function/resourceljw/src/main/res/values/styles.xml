<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>

    </style>

    <style name="welcomeTheme" parent="android:Theme.Holo.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/ljw_loading</item>

    </style>

    <style name="top_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_input_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="login_input_text_et" parent="login_input_text">
        <item name="android:background">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>
